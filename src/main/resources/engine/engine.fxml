<VBox fx:id="mainVBox" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="engine.GamePlay">
    <children>
        <AnchorPane fx:id="playGround" maxHeight="-1.0" maxWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                
            </children>
        </AnchorPane>
        <HBox fx:id="hudDisplay" layoutY="900.0">
            <children>
                <Text fx:id="score" strokeType="OUTSIDE" strokeWidth="0.0" text="Score" />
                <Text fx:id="scoreField"/>
                <Text fx:id="lives" strokeType="OUTSIDE" strokeWidth="0.0" text="Lives" />
